<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_hom"
    tools:context=".SignUpActivity"


    >
    <!--  android:background="@drawable/scrn1bgx1"       android:background="#003D73"-->

    <!--  <include layout="@layout/content_sign_up" />-->

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/appCompatImageButton"
        android:layout_width="16dp"
        android:layout_height="16dp"

        android:layout_marginStart="21dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/back_arrow_yellow"
        android:onClick="onclick_back2"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></android.support.v7.widget.AppCompatImageButton>

    <TextView
        android:id="@+id/txtVwScreen2Hdr"
        android:layout_width="177dp"
        android:layout_height="32dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="107dp"
        android:fontFamily="@fonts/GlacialIndifferenceBold"
        android:text="Almost Done!"

        android:textColor="#EDD170"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtVwScreen2SubTitle"
        android:layout_width="246dp"
        android:layout_height="63dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="175dp"
        android:fontFamily="@fonts/GlacialIndifferenceRegular"
        android:text="You just need to secure your \naccount"

        android:textColor="#B9B9B9"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtinputLayPwd"
        android:layout_width="269dp"
        android:layout_height="0dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="312dp"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        app:hintTextAppearance="@style/txtLabel"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtEditPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:theme="@style/textEditStyle" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtinputLayPwd2"
        android:layout_width="269dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="385dp"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        app:hintTextAppearance="@style/txtLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtEditPwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:theme="@style/textEditStyle" />
    </android.support.design.widget.TextInputLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_sign_in"
        style="@style/home_page_button"
        android:layout_width="99dp"
        android:layout_height="37dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/register_button"
        android:onClick="onclick_regPage1"
        android:text="@string/Submit"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>