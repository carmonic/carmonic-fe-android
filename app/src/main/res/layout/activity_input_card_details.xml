<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_hom"
    tools:context=".InputCardDetailsActivity"
    >

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/appCompatImageButton"
        android:layout_width="16dp"
        android:layout_height="16dp"

        android:layout_marginStart="21dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/back_arrow_yellow"
        android:onClick="onclick_back2"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.AppCompatImageButton>

    <TextView
        android:id="@+id/txtVwScreen2Hdr"
        android:layout_width="177dp"
        android:layout_height="32dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="107dp"
        android:fontFamily="@fonts/GlacialIndifferenceBold"
        android:text="Almost There!"

        android:textColor="#EDD170"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtVwScreen2SubTitle"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="175dp"
        android:fontFamily="@fonts/GlacialIndifferenceRegular"
        android:text="Input your card details"

        android:textColor="#B9B9B9"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtinputCardNumber"
        android:layout_width="269dp"
        android:layout_height="0dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="250dp"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        app:hintTextAppearance="@style/txtLabel"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEditCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Number"
            android:inputType="text"
            android:theme="@style/textEditStyle" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtinputCardName"
        android:layout_width="269dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="310dp"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        app:hintTextAppearance="@style/txtLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEditCardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name (as appears on card)"
            android:inputType="text"
            android:theme="@style/textEditStyle" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtinputCardExpiryMonth"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="370dp"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        app:hintTextAppearance="@style/txtLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEditCardExpiryMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expiry Month"
            android:inputType="text"
            android:theme="@style/textEditStyle" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtinputCardExpiryYear"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="370dp"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        app:hintTextAppearance="@style/txtLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEditCardExpiryYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expiry Year"
            android:inputType="text"
            android:theme="@style/textEditStyle" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtinputCardCVVNumber"
        android:layout_width="269dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="430dp"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        app:hintTextAppearance="@style/txtLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEditCardCVVNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CVV"
            android:inputType="text"
            android:theme="@style/textEditStyle" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_in"
        style="@style/home_page_button"
        android:layout_width="99dp"
        android:layout_height="37dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/register_button"
        android:onClick="onclick_regPage1"
        android:text="Next"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>