<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_billing_main"
    tools:context=".confirm_location">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="14dp"
        android:layout_height="13.98dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="60dp"
        android:contentDescription="close"
        android:onClick="onclick_cancel_location_confirmation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close" />

    <TextView
        android:id="@+id/txtVwScreen2Hdr"
        android:layout_width="241dp"
        android:layout_height="29dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="123dp"
        android:fontFamily="@font/glacial_indifference_regular"
        android:lineHeight="29sp"
        android:lineSpacingExtra="10sp"
        android:text="Confirm your location"
        android:textAlignment="textStart"
        android:textColor="#EDD170"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtVwScreensubHdr"
        android:layout_width="203dp"
        android:layout_height="20dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="163dp"
        android:fontFamily="@font/glacial_indifference_regular"
        android:lineHeight="19sp"
        android:lineSpacingExtra="10sp"
        android:text="Click on the address to edit"
        android:textAlignment="textStart"
        android:textColor="#B9B9B9"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_sign_in"
        style="@style/home_page_button"
        android:layout_width="99dp"
        android:layout_height="37dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/register_button"
        android:onClick="onclick_locating_mechanic"
        android:text="@string/Next"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextConfirmLocation"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:fontFamily="@font/glacial_indifference_regular"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVwScreensubHdr" />

</android.support.constraint.ConstraintLayout>